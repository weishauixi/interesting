.home-page {
  position: relative;
}

/* Ëã±ÈõÑÂå∫Âüü */
.hero {
  text-align: center;
  padding: 96rpx 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 245, 245, 0.98) 100%);
  border-radius: 32rpx;
  margin-bottom: 64rpx;
  position: relative;
  overflow: hidden;
  border: 6rpx solid #d32f2f;
  box-shadow: 0 16rpx 64rpx rgba(211, 47, 47, 0.2);
}

.hero-decoration {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  display: block;
  animation: bounce 3s ease-in-out infinite;
}

.hero-title-container {
  position: relative;
  margin-bottom: 32rpx;
}

.hero-title {
  font-size: 72rpx;
  font-weight: 800;
  display: block;
  background: linear-gradient(135deg, #d32f2f 0%, #ff6f00 50%, #ffd700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
  z-index: 1;
}

.title-gold-decoration {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 120rpx;
  opacity: 0.3;
  z-index: 0;
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

.hero-subtitle {
  font-size: 36rpx;
  color: #d32f2f;
  display: block;
  margin-bottom: 48rpx;
  font-weight: 600;
}

/* ÂñúÂ∫ÜÂàÜÈöîÁ∫ø */
.festive-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 64rpx;
}

.divider-icon {
  font-size: 64rpx;
  animation: bounce 2s ease-in-out infinite;
}

.divider-line {
  width: 160rpx;
  height: 6rpx;
  background: linear-gradient(90deg, transparent 0%, #ffd700 50%, transparent 100%);
}

.divider-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #d32f2f;
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
  border-radius: 40rpx;
  border: 4rpx solid #ffd700;
}

/* ÁªüËÆ°Êï∞ÊçÆ */
.stats {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 48rpx;
  padding: 48rpx;
  background: linear-gradient(135deg, rgba(211, 47, 47, 0.1) 0%, rgba(255, 215, 0, 0.1) 100%);
  border-radius: 32rpx;
  border: 4rpx solid rgba(211, 47, 47, 0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 72rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #d32f2f 0%, #ff6f00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.stat-label {
  font-size: 28rpx;
  color: #d32f2f;
  margin-top: 8rpx;
  font-weight: 600;
}

.stat-divider {
  width: 4rpx;
  height: 80rpx;
  background: linear-gradient(180deg, transparent 0%, #ffd700 50%, transparent 100%);
}

/* ÁâπËâ≤ÂäüËÉΩ */
.features-section {
  margin-bottom: 80rpx;
}

.section-title {
  text-align: center;
  font-size: 56rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 64rpx;
  color: #d32f2f;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280rpx, 1fr));
  gap: 32rpx;
}

.feature-card {
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.1);
  border: 4rpx solid transparent;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #d32f2f 0%, #ffd700 50%, #ff6f00 100%);
}

.feature-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  display: block;
  animation: wiggle 3s ease-in-out infinite;
}

.feature-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 24rpx;
  color: #d32f2f;
}

.feature-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* Á•ùÁ¶èÈ¢ÑËßà */
.greetings-section {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 245, 245, 0.98) 100%);
  border-radius: 32rpx;
  padding: 64rpx 32rpx;
  border: 6rpx solid #d32f2f;
  box-shadow: 0 16rpx 64rpx rgba(211, 47, 47, 0.15);
}

.greetings-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.greeting-card {
  background: linear-gradient(135deg, #fff 0%, #fff5f5 50%, #ffebee 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 4rpx solid #d32f2f;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.greeting-card::before {
  content: 'üßß';
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 40rpx;
  opacity: 0.3;
}

.greeting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 4rpx solid rgba(211, 47, 47, 0.1);
}

.greeting-sender {
  font-weight: 600;
  color: #d32f2f;
  font-size: 30rpx;
}

.greeting-time {
  font-size: 24rpx;
  color: #ff6f00;
  font-weight: 500;
}

.greeting-message {
  font-size: 30rpx;
  line-height: 1.6;
  color: #2c3e50;
  margin-bottom: 24rpx;
  min-height: 96rpx;
}

.greeting-footer {
  display: flex;
  justify-content: flex-end;
}

.greeting-recipient {
  font-size: 26rpx;
  color: #d32f2f;
  font-weight: 500;
}

/* ÊµÆÂä®ÁÅØÁ¨º */
.floating-lanterns {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  pointer-events: none;
  z-index: 0;
}

.lantern {
  position: absolute;
  font-size: 80rpx;
  opacity: 0.6;
  animation: float 4s ease-in-out infinite;
}

.lantern:nth-child(1) {
  left: 5%;
  animation-delay: 0s;
}

.lantern:nth-child(2) {
  left: 50%;
  animation-delay: 1s;
}

.lantern:nth-child(3) {
  right: 5%;
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-40rpx);
  }
}

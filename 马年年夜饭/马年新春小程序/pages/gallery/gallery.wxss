/* pages/gallery/gallery.wxss */
.gallery-page {
  padding: 32rpx;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 48rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 245, 245, 0.98) 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.1);
  border: 4rpx solid #d32f2f;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 64rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #d32f2f 0%, #ff6f00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.stat-label {
  font-size: 26rpx;
  color: #d32f2f;
  margin-top: 8rpx;
  font-weight: 600;
}

.stat-divider {
  width: 4rpx;
  height: 80rpx;
  background: linear-gradient(180deg, transparent 0%, #ffd700 50%, transparent 100%);
}

/* 照片卡片 */
.gallery {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 32rpx;
}

.photo-card {
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.1);
  border: 4rpx solid transparent;
}

.photo-image {
  position: relative;
  width: 100%;
  padding-bottom: 75%;
}

.photo-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.photo-info {
  padding: 24rpx;
}

.photo-uploader {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.uploader-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #d32f2f 0%, #ff6f00 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border: 4rpx solid #ffd700;
}

.uploader-name {
  font-weight: 600;
  color: #d32f2f;
  font-size: 28rpx;
}

.photo-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.photo-footer {
  display: flex;
  justify-content: flex-end;
}

.photo-time {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 64rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  margin-top: 32rpx;
}

.empty-icon {
  font-size: 128rpx;
  display: block;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.empty-hint {
  color: #999;
  font-size: 28rpx;
  display: block;
  margin-bottom: 48rpx;
}

/* app.wxss - 全局样式 */
page {
  background: linear-gradient(135deg, #8b0000 0%, #c0392b 30%, #e74c3c 60%, #ff6b35 85%, #ffa502 100%);
  background-attachment: fixed;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 容器 */
.container {
  padding: 32rpx;
  position: relative;
  z-index: 1;
}

/* 卡片 */
.card {
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 16rpx 48rpx rgba(211, 47, 47, 0.15);
  border: 4rpx solid #d32f2f;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: repeating-linear-gradient(
    90deg,
    #c0392b 0rpx,
    #c0392b 60rpx,
    #ffd700 60rpx,
    #ffd700 120rpx
  );
}

/* 标题 */
.title {
  font-size: 56rpx;
  font-weight: 800;
  text-align: center;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #d32f2f 0%, #ff6f00 50%, #ffd700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.3);
  position: relative;
  z-index: 1;
}

.subtitle {
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  margin-bottom: 64rpx;
  font-weight: 600;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

/* 按钮 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.3);
}

.btn-primary {
  background: linear-gradient(135deg, #d32f2f 0%, #ff6f00 100%);
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
  color: #d32f2f;
  border: 4rpx solid #d32f2f;
}

.btn-outline {
  background: transparent;
  color: #d32f2f;
  border: 4rpx solid #d32f2f;
}

.btn-block {
  width: 100%;
  display: flex;
}

/* 表单 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-weight: 600;
  font-size: 30rpx;
  color: #c0392b;
}

.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 4rpx solid #e0e0e0;
  border-radius: 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: white;
}

.form-textarea {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 4rpx solid #e0e0e0;
  border-radius: 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: white;
  min-height: 160rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 80rpx;
  color: white;
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 64rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  color: #666;
}

/* 动画 */
@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

@keyframes wiggle {
  0%, 100% {
    transform: rotate(-5deg);
  }
  50% {
    transform: rotate(5deg);
  }
}

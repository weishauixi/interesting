/* pages/upload/upload.wxss */
.upload-page {
  padding: 32rpx;
}

.form-title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 48rpx;
  color: #2c3e50;
}

/* 上传区域 */
.upload-area {
  border: 6rpx dashed #d32f2f;
  border-radius: 32rpx;
  padding: 64rpx;
  text-align: center;
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-placeholder {
  width: 100%;
}

.upload-icon {
  font-size: 128rpx;
  display: block;
  margin-bottom: 32rpx;
}

.upload-placeholder text {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.upload-limit {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-top: 32rpx;
}

/* 预览列表 */
.preview-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  width: 100%;
}

.preview-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 24rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(211, 47, 47, 0.9);
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-add {
  aspect-ratio: 1;
  border: 4rpx dashed #ddd;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.add-icon {
  font-size: 64rpx;
  color: #999;
}

.add-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 复选框样式 */
.checkbox-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.checkbox-label checkbox {
  transform: scale(1.2);
}

/* 上传说明 */
.tips-card {
  margin-top: 32rpx;
}

.tips-title {
  font-size: 40rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 32rpx;
  color: #2c3e50;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.tip-item {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
  display: block;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.tip-item:last-child {
  border-bottom: none;
}

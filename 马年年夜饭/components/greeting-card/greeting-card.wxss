/* components/greeting-card/greeting-card.wxss */
.greeting-card {
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(211, 47, 47, 0.25);
  transition: all 0.3s ease;
}

.greeting-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(211, 47, 47, 0.3);
}

.greeting-card-content {
  position: relative;
  z-index: 1;
}

.decoration {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 80rpx;
  opacity: 0.3;
}

.greeting-message {
  margin-bottom: 32rpx;
}

.message-text {
  font-size: 36rpx;
  line-height: 1.8;
  font-weight: 500;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  display: block;
}

.greeting-footer {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.sender-info,
.recipient-info {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.label {
  opacity: 0.9;
}

.value {
  font-weight: 600;
}

.greeting-time {
  text-align: center;
  font-size: 24rpx;
  opacity: 0.8;
}

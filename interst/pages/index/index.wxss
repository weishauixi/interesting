/* index.wxss - 主页面样式 */

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background: #000;
}

/* Canvas画布 */
.canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 文字层 */
.text-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.text-particle {
  position: absolute;
  font-weight: 300;
  text-shadow: 0 0 10px currentColor;
  transition: opacity 0.3s ease;
  will-change: transform;
}

/* 控制按钮 */
.controls {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 10;
}

.btn-control {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 0;
  line-height: 1;
}

.btn-control:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.btn-control::after {
  border: none;
}

/* 提示文字 */
.hint {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  color: rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
  letter-spacing: 4rpx;
}
